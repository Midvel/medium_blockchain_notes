        "dev:coverage": "npx truffle run coverage"
    },
    "dependencies": {
        "@openzeppelin/contracts-ethereum-package": "2.5.0",
        "@openzeppelin/upgrades": "^2.8.0",
        "truffle": "^5.1.53",
        "truffle-assertions": "^0.9.2",
        "web3": "^1.2.11"
