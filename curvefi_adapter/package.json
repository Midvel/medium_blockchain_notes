    "devDependencies": {
        "@truffle/hdwallet-provider": "^1.0.38",
        "@openzeppelin/test-helpers": "^0.5.6",
        "@openzeppelin/truffle-upgrades": "^1.1.0",
        "bignumber.js": "^9.0.0",
        "chai": "^4.2.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.8.1",
        "ganache-cli": "^6.10.2",
        "mocha": "^8.1.3",
        "regenerator-runtime": "^0.13.7",
        "solhint": "^3.2.0",
        "solidity-coverage": "^0.7.10",
        "truffle-contract-size": "^2.0.0"
